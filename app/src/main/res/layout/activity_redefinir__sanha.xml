<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Redefinir_Sanha">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_width="442dp"
                android:layout_height="255dp"
                app:srcCompat="@drawable/senhas" />

            <EditText
                android:id="@+id/edt_cpf_cnpj_redefinir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="CPF/CNPJ"
                android:inputType="number" />

            <EditText
                android:id="@+id/edt_senha_redefinir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nova senha:"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/edt_confirmar_senha_redefinir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Confirmar senha:"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btn_atualizar_redefinir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="Atualizar" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>